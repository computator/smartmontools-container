[Unit]
Description=smartmontools

[Container]
Image=ghcr.io/computator/smartmontools
AutoUpdate=registry

HostName=%H
PodmanArgs=--privileged

# Environment=MAILNAME=%H
Environment=SMARTHOST=localhost
Environment=REPORT_EMAIL=root@localhost

Volume=smartmontools:/var/lib/smartmontools

[Install]
WantedBy=multi-user.target
